<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.my.springcloud.dao.PaymentDao">

<insert id="create" parameterType="Payment" useGeneratedKeys="true" keyProperty="id">
  insert into payment(serial) values (#{serial});
</insert>

  <resultMap id="BasicResultMap" type="com.my.springcloud.entities.Payment">
    <id property="id" column="id" jdbcType="BIGINT"></id>
    <id property="serial" column="serial" jdbcType="VARCHAR"></id>
  </resultMap>
  <select id="getPaymentById" parameterType="Long" resultMap="BasicResultMap">
    select * from payment where id = #{id}
  </select>


</mapper>